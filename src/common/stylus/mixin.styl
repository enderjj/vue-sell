// 定义移动设备上 1 像素的显示 通过伪类实现
border-1px($color)
  position: relative
  &::after
    display: block
    position: absolute
    left: 0
    bottom: 0
    content: ' '
    width: 100%
    border-top: 1px solid $color

before-border-1px($color)
  position: relative
  &:before
    display: block
    position: absolute
    left: 0
    top: 0
    content: ' '
    width: 100%
    border-bottom: 1px solid $color

border-none()
  &::after
    display: none

// 定义背景图片的显示
bg-image($url)
  background-image: url($url + '@2x.png')
  @media (-webkit-min-device-pixel-ratio: 3),(min-device-pixel-ratio: 3)
    background-image: url($url + '@3x.png')
